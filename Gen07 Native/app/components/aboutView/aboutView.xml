<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">

    <GridLayout rows="auto, *">
        <widgets:action-bar />
        <StackLayout row="1">

            <StackLayout>

                <Label text="My App" cssClass="label" />

                <Label text="Version 1" cssClass="label" />

                <TextView text="App description" editable="false" />

                <Button text="Contact us" tap="{{ onContactTap }}" tag="mailto:support@example.com" />

                <Button text="Like us on Facebook" tap="{{ onFacebookTap }}" />

                <Button text="Follow us on Twitter" tap="{{ onTwitterTap }}" />

            </StackLayout>

            <!-- additional view content -->
        </StackLayout>
    </GridLayout>
</Page>
<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">

    <GridLayout rows="auto, *">
        <widgets:action-bar />
        <StackLayout row="1">

            <StackLayout>
                <!-- formView1Model additional fields -->
                <GridLayout columns="*, *" rows="auto" cssClass="form-buttons">

                    <widgets:button text="Cancel" tap="onformView1ModelFormCancel" />

                    <widgets:button col="1" text="Confirm" tap="onformView1ModelFormSubmit" />

                </GridLayout>
            </StackLayout>

            <!-- additional view content -->
        </StackLayout>
    </GridLayout>
</Page>